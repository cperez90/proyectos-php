# Activa el motor de reescritura
RewriteEngine On

# Define la ruta base del proyecto (muy importante)
RewriteBase /

# Desactiva listado de directorios
Options -Indexes

# Si el archivo o directorio no existe, env√≠a todo a index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [L,QSA]

Options -Indexes

# Fuerza UTF-8
AddDefaultCharset UTF-8

# Evita mostrar .htaccess en el navegador
<Files ".htaccess">
    Require all denied
</Files>

# Evita acceso directo a archivos sensibles
<FilesMatch "\.(env|ini|log|sh|sql)$">
    Require all denied
</FilesMatch>
